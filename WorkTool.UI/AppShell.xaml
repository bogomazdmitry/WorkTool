<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkTool.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkTool.UI"
    xmlns:view="clr-namespace:WorkTool.UI.TabItems"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Text format"
                        ContentTemplate="{DataTemplate view:TextFormatPage}" />

        <ShellContent Title="Json format"
                        ContentTemplate="{DataTemplate view:JsonFormatPage}" />

        <ShellContent Title="Diff"
                        ContentTemplate="{DataTemplate view:DiffPage}" />
    </TabBar>

</Shell>
